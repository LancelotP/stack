  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug API: Nodemon",
      "protocol": "inspector",
      "cwd": "${workspaceFolder}/packages/api",
      "sourceMaps": true,
      "stopOnEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "restart": true,
      "processId": "${command:PickProcess}"
    }
  ]
}
